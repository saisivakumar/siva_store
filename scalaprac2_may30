

object Helloworld {

  def main(args: Array[String]) {
    println("Hello, World!")
  }

  // Variable declaration
  var a: Int = 100
  val c: Int = 555
  var str1: String = "sivakumar"
  var str2: String = """This
    is a
    multi-line object"""
  var str3: String = "sivakumar"
  println(s"Hello $str1 $str2 $a $c")

  //string Functions

  var con = str1.concat("chvs")
  var end = str1.endsWith("ar")
  var exs = str1.contains("v")
  var eql = str1.equals(str3)
  var hsc = str1.hashCode()
  var ind = str1.indexOf("k")
  var ind2 = str1.indexOf("a", 4)
  var repc = str1.replace("s", "SH")
  var reps = str1.replace(str1, "CH V S Naga Siva Kumar")

  println(s"concatination $con endwith $end contains $exs equals_to_string $eql")
  println(s"hashcode $hsc index $ind index_pos $ind2 replace_char $repc replace_string $reps")

}
